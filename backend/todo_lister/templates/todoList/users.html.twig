{% extends "todoList/base_templates/logged.html.twig" %}

{% block admin %}
	<li class="nav-item">
		{% if admin %}
			<a class="nav-link" aria-current="page" href="{{ path('users_view') }}">
				<div><i class="bi bi-people-fill"> Administrar Usuarios</i></div>
			</a>
		{% endif %}
	</li>
{% endblock %}

{% block content %}

<div class="container mt-5 mb-5">
	<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crearUsuario" data-bs-whatever="@crear">
		<i class="bi bi-list-task"></i> A単adir Usuario</button>
	<div class="table-responsive">
	    <table class="table table-dark table-striped table-bordered">
		  <thead>
		    <tr>
		      <th scope="col">Nombre</th>
		      <th scope="col">Rol</th>
		    </tr>
		  </thead>

		  <tbody>
	    	{% for user in users %}
		    <tr>
				<td>{{ user.username }}</td>
				<td>{{ user.roles[0] }}</td>
				</td>
		    </tr>
	    	{% endfor %}
		  </tbody>

		</table>
	</div>

	<!--modals-->
	<div class="modal fade" id="crearUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog ">
			<div class="modal-content bg-dark txt">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">A単adir Usuario</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<form action="{{ path('app_newUser') }}" method="post">
					<div class="modal-body">
						<div class="mb-3">
							<label for="nombre" class="col-form-label">Nombre:</label>
							<input type="string" class="form-control" name="nombre" id="nombre" required="true">
						</div>
						<div class="row justify-content-center mb-4">
							<div class="col-9">
								<label for="rol" class="form-label txt">Rol:</label>
								<input type="string" class="form-control" name="rol" required="true">
							</div>
						</div>
						<div class="row justify-content-center mb-4">
							<div class="col-9">
								<label for="inputPassword" class="form-label txt">Contrase単a:</label>
								<input type="password" class="form-control" name="password" id="inputPassword" autocomplete="current-password" required>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn bg-red txt" data-bs-dismiss="modal">Cerrar</button>
						<button type="submit" class="btn btn-primary">A単adir</button>
					</div>
				</form>
			</div>
		</div>
	</div>

</div>

{% endblock %}